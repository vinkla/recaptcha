{
    "name": "vinkla/recaptcha",
    "description": "An easy-to-use reCAPTCHA package",
    "keywords": [
        "recaptcha",
        "google",
        "security"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Klaiber",
            "homepage": "https://github.com/vinkla"
        }
    ],
    "require": {
        "php": "^7.2",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^1.4",
        "php-http/httplug": "^1.1 || ^2.0",
        "php-http/message-factory": "^1.0"
    },
    "require-dev": {
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message": "^1.7",
        "php-http/mock-client": "^1.1",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.2-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Vinkla\\Recaptcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vinkla\\Tests\\Recaptcha\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
